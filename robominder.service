[Unit]
Description=XMPP Reminder Bot
After=network.target

[Service]
Type=simple
User=robominder
Group=robominder
WorkingDirectory=/opt/robominder
Environment="PYTHONUNBUFFERED=1"
ExecStart=/usr/bin/python3 /opt/robominder/bot.py
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target